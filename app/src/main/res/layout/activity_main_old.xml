<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stimper.vincent.soccerprediction.MainActivity">

    <TextView
        android:id="@+id/instruction"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/match_group"
        android:layout_below="@id/instruction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/teamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/goalA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <Spinner
            android:id="@+id/goalB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/teamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/certainty_group"
        android:layout_below="@id/match_group"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/certainty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/certainty"
            android:layout_toRightOf="@id/certainty_text"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/predict"
        android:layout_below="@id/certainty_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/prediction_group"
        android:layout_below="@id/predict"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/result_table"
            android:layout_centerHorizontal="true"
            android:layout_width="195dp"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:id="@+id/result_text"
                    android:layout_width="60dp"/>
                <TextView
                    android:text="1"
                    android:layout_width="45dp" />
                <TextView
                    android:text="X"
                    android:layout_width="45dp" />
                <TextView
                    android:text="2"
                    android:layout_width="45dp" />
            </TableRow>

            <View
                android:layout_height="2dp"
                android:background="#90000000" />  <!-- #FF909090 -->

            <TableRow>
                <TextView
                    android:id="@+id/result"/>
                <TextView
                    android:id="@+id/odds_win"/>
                <TextView
                    android:id="@+id/odds_draw"/>
                <TextView
                    android:id="@+id/odds_loss"/>
            </TableRow>

        </TableLayout>

        <com.stimper.vincent.soccerprediction.charting.PieChart
            android:id="@+id/pie_chart"
            android:layout_below="@id/result_table"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </RelativeLayout>

</RelativeLayout>
